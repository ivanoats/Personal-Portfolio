
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p id="author">
  <b> By: </b> <%= @post.author.email %>
</p>

<ul>
  <% if @post.comments.any? %>
    <% @post.comments.each do |comment| %>
      <li><%= comment.content %></li>
      <li> By: <%=comment.author %> </li>
    <% end %>
  <% end %>
</ul>

<% if current_user %>
  <h4> Add a Comment </h4>
  <%= render '/comments/form' %>
<% end %>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
